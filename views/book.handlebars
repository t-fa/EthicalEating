<head>
    <link rel="stylesheet" href="/css/book.css" />
</head>
<div style="margin-left: 10%; margin-right: 10%;">
    <h1 id="recipeBookHomeTitle">My Recipes Home</h1><br />

    <table id="recipeBookTable">
        <tr>
            <th style="width:50%">
                Recipe
                <span class="sortIcon" style="float:right;cursor:pointer" onclick="sortTable(0)">&#9660</span>
            </th>
            
            <th style="width:35%">
                Ethical Rating
                <span class="sortIcon" style="float:right;cursor:pointer" onclick="sortTable(1)">&#9660</span>
            </th>
            
            <th style="width:30%">
                Public
                <span class="sortIcon" style="float:right;cursor:pointer" onclick="sortTable(2)">&#9660</span>
            </th>
        </tr>
        {{#each recipes}}
    <tr>
        <td class="first" id="recipeClick">
            <a href="/userRecipe/{{this.id}}">{{this.name}}</a>
        </td>
        
        <td> {{this.ethicalScore}}</td>
        
        <td class="isPublic" id="isPublic">{{this.isPublic}}</td>
        <td>
            <button class="UpdateIsPublic" style="float:right" onclick="updateIsPublic"></button>
        </td>
    </tr>
        {{/each}}
    </table>
    <br />
    
    <!-- will link to page where user can create new recipe -->
    <button onclick="window.location.href='build'" class="createNewRecipe">
        Create New Recipe
    </button>
</div>

<script src="/js/book.js"></script>