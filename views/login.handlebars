<fieldset>
    <legend>Log in:</legend>
    <p>
        <label>Username:<br>
            <input type="text" name="username">
        </label>
    </p>
    <p>
        <label>Password:<br>
            <input type="password" name="password">
        </label>
    </p>
    <p>
        <input type="submit" value="Log in">
    </p>
</fieldset>

<p>or</p>

<fieldset>
    <legend>Create account:</legend>
    <p>
        <label>Username:<br>
            <span>Username must have at least 3 characters 
                consisting of letters and numbers only.</span><br>
            <input type="text" name="username">
        </label>
    </p>
    <p>
        <label>Password:<br>
            <span>Password must be at least 8 characters long, 
                with at least one letter and one number.</span><br>
            <input type="password" name="password">
        </label>
    </p>
    <p>
        <label>Confirm password:<br>
            <span>Passwords must match.</span><br>
            <input type="password" name="confirmPassword">
        </label>
    </p>
    <p>
        <input type="submit" value="Create account">
    </p>
</fieldset>